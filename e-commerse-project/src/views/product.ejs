<%- include('partials/header') %>
<div class="container">
  <div class="product-view mt-5">
    <h1 class="text-center mb-4"><%= product.name %></h1>
    <div class="row">
      <div class="col-md-6 text-center">
        <img
          src="<%= product.image %>"
          alt="<%= product.name %>"
          class="img-fluid rounded"
        />
      </div>
      <div class="col-md-6">
        <div class="product-details p-4">
          <h2 class="mb-3">$<%= product.price %></h2>
          <p class="mb-3">Category: <%= product.category %></p>
          <a href="/" class="btn btn-secondary mt-3">Back to Products</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
